<div class="container">
  <div class="row justify-content-left">
    <div class="col-10 mt-2"  id="submit-form">
      <%= render 'shared/errors' %>
      <%= form_with(model: article, class: "shadow p-3 mb-3 rounded", local: true) do |form| %>
        <div class="form-group row mt-3" id="form-labels">
          <%= form.label :title, class: "col-2 col-form-label text-muted" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row mt-3" id="form-labels">
          <%= form.label :description, class: "col-2 col-form-label text-muted" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row justify-content-center" id="update-button" >
          <%= form.submit class: "mt-4 col-3 btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
    </div>
    <div id="back-button">
      <a href=#><%= link_to '[ Back ]', articles_path, class:"text-dark" %></a>
    </div>
  </div>
</div>