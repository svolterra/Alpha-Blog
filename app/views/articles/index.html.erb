<h2 class="text-center mt-4">Articles List</h2>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4"> <!-- Bootstrap operates on a 12 column grid system -->
        <div class="card text-center shadow mb-5 bg-white rounded border-dark">
          <div class="card-header fst-italic">
            by Sara Ibrahim
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class:"text-dark bg-white"%></h5>
            <p class="card-text"><%= truncate(article.description, length:50) %></p>
            <a href="#"><%= link_to 'View', article_path(article), class:"btn btn-outline-dark" %></a>
            <a href="#"><%= link_to 'Edit', edit_article_path(article),
                                    class:"btn btn-outline-dark"%></a>
            <a href="#"><%= link_to 'Destroy', article, method: :delete, class:"btn btn-outline-dark",
                                    data: { confirm: 'Are you sure?' }%></a>
          </div>
          <div class="card-footer text-muted color-pink">
            <small> Created <%= time_ago_in_words(article.created_at) %> ago,
              edited <%= time_ago_in_words(article.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


