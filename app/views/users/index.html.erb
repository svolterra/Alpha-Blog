<h2 class="text-center mt-4">✨ Alpha Bloggers ✨</h2>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4"> <!-- Bootstrap operates on a 12 column grid system -->
        <div class="card text-center shadow mb-5 bg-white rounded border-dark">
          <div class="card-header fw-bold">
            <%= user.username %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 100), user %>
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <a href="#"><%= link_to 'View Profile', user, class:"btn btn-outline-info" %></a>
            <a href="#"><%= link_to 'Edit Profile', edit_user_path(user),
                                    class:"btn btn-outline-dark"%></a>
          </div>
          <div class="card-footer text-muted color-pink">
            <small> Joined <%= time_ago_in_words(user.created_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>